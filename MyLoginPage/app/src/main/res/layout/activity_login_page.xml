<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    android:background="@color/BackgroundLoginPage">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="309dp"
        android:layout_height="350dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_illustration_loginpage" />

    <TextView
        android:id="@+id/tvTittleLoginPage"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/sail_regular"
        android:text="have you joined us?  hurry up and join"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.718"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif"
        android:justificationMode="inter_word"
        android:text="Immediately join us wetravel, to be able to enjoy the interesting features that we provide. what are you waiting for .. Letâ€™s go join us."
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTittleLoginPage" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/custom_button"
        android:text="Sign Up"
        android:fontFamily="@font/prata_regular"
        android:textAllCaps="false"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="266dp"
        android:layout_height="50dp"
        android:layout_marginEnd="144dp"
        android:background="@drawable/custom_signinbutton"
        android:fontFamily="@font/prata_regular"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#FFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/btnSignUp"
        app:layout_constraintTop_toTopOf="@+id/btnSignUp" />


</androidx.constraintlayout.widget.ConstraintLayout>